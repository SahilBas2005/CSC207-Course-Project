<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.analysis.AnalysisFragment">

    <!-- Generate Button -->

    <!-- Tournament Description Section -->
    <Button
            android:id="@+id/generateTournamentDescriptionBtn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Generate Tournament Description"
            android:textSize="16sp"
            android:textColor="@android:color/white"
            android:backgroundTint="@color/purple_500"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_margin="16dp" android:layout_marginTop="32dp" app:layout_constraintHorizontal_bias="0.531"/>
    <androidx.cardview.widget.CardView
            android:id="@+id/tournamentDescriptionCardView"
            android:layout_width="378dp"
            android:layout_height="558dp"
            app:cardElevation="8dp"
            app:cardCornerRadius="12dp"
            app:layout_constraintTop_toBottomOf="@id/generateTournamentDescriptionBtn"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_margin="16dp"
            android:padding="16dp" android:background="#FFFFFF" android:backgroundTint="@color/purple_500"
            app:layout_constraintVertical_bias="0.0">

        <ScrollView
                android:id="@+id/tournamentDescriptionScrollView"
                android:layout_width="match_parent"
                android:layout_height="538dp"
                app:layout_constraintTop_toBottomOf="@id/generateTournamentDescriptionBtn"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="20dp" android:background="#FFFFFF" android:backgroundTint="@color/purple_500">

            <TextView
                    android:id="@+id/tournamentDescriptionResult"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#FFFFFF" android:backgroundTint="@color/purple_500"
                    android:textColor="#FFFFFF"/> <!-- White background -->
            <!--                    android:textColor="#6A1B9A" &lt;!&ndash; Purple text &ndash;&gt;-->
            <!--                    android:text="Tournament Description will appear here."-->
            <!--                    android:textSize="14sp"-->
            <!--                    android:padding="16dp" />-->
        </ScrollView>


    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
